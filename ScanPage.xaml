<Page x:Class="Barcode_App_Gui.ScanPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Barcode_App_Gui"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="ScanPage">

    <Grid>
        <StackPanel FocusManager.FocusedElement="{Binding ElementName=dataEntry}">
            <Button HorizontalAlignment="left" Width="200" FontSize="36" Content="Back" Click="Button_Click" />
            <TextBox Name="dataEntry" Height="23" TextWrapping="Wrap" KeyUp="dataEntry_KeyUp"/>
        </StackPanel>
        <TextBlock Name="text" Text="Scan" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</Page>
