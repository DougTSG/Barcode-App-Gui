<Page x:Class="Barcode_App_Gui.MainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Barcode_App_Gui"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="Page1">

    <Grid>
        <TextBlock Text="Page 1" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Border Background="GhostWhite" BorderBrush="Gainsboro" BorderThickness="1">
            <StackPanel Margin="10">
                <TextBlock HorizontalAlignment="Center" Margin="0 0 0 0" FontSize="72">EAST Conference 2018</TextBlock>
                <TextBlock HorizontalAlignment="Center" Margin="0 0 0 100" FontSize="36">Barcode Scan App</TextBlock>
                <Button Width="200" FontSize="36" Content="Scan" Click="Button_Click" />
                <Button Width="200" Margin="0 10" FontSize="36" Click="Button_Click_1">Data</Button>
                <Button Width="200" FontSize="36" Click="Button_Click_2">Settings</Button>
            </StackPanel>
        </Border>
    </Grid>
</Page>
